@model WebAndCloudCA.Models.Guest

@{
    ViewBag.Title = "AccountDetails";
}

@if (Session["name"] != null)
{
    <nav class="account_nav">
        <ul class="container">
            <li>@Html.ActionLink("Book A Room", "Booking", "Booking")</li>
            <li>@Html.ActionLink("Account Details", "AccountDetails", "AccountDetails")</li>
            <li>@Html.ActionLink("Booking History", "BookingDetails", "BookingDetails")</li>
            <li>@Html.ActionLink("Feedback", "Index", "Feedback")</li>
        </ul>
    </nav>
   
    <panel class="form">
        <div class="centre">
            <h2>Account Details</h2>
        </div>

        <div>
            <h4>Welcome @Session["name"]!</h4>
            @ViewData["message"]
            <hr />
            <table class="account_tbl">
                @TempData["updated"]
                <tr>
                    <th>@Html.DisplayNameFor(g => g.GuestId)</th>
                    <td>@Html.DisplayFor(g => g.GuestId)</td>
                </tr>
                <tr>
                    <th>@Html.DisplayNameFor(g => g.Name)</th>
                    <td>@Html.DisplayFor(g => g.Name)</td>
                </tr>
                <tr>
                    <th>@Html.DisplayNameFor(g => g.Email)</th>
                    <td>@Html.DisplayFor(g => g.Email)</td>
                </tr>
                <tr>
                    <th>@Html.DisplayNameFor(g => g.PhoneNo)</th>
                    <td>@Html.DisplayFor(g => g.PhoneNo)</td>
                </tr>
            </table>
        </div>        
        @{
            if (TempData["message"] != null)
            {
            <script>alert('@TempData["message"]')</script>
            }
        }

            <div class="ref">
                <span>@Html.ActionLink("Edit Details", "EditDetails", new { id = Model.GuestId })</span>
                @using (Html.BeginForm("DeleteAccount", "AccountDetails", FormMethod.Post))
                {
            <span>@Html.ActionLink("Delete Account", "DeleteAccount")</span>
                }
            </div>

    </panel>
            }