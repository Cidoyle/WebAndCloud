@model WebAndCloudCA.ViewModels.MyAccountViewModel
<script type="text/javascript" src=@Url.Content("~/Scripts/jquery-1.10.2.js")></script>
<script type="text/javascript" src=@Url.Content("~/Scripts/MyJavaScript.js")></script>

@{
    ViewBag.Title = "Registration";
}

<h1 class="line1 headline reg_display">
    <span class="col_rborder">Register New Account</span>
    <span>Log in</span>
</h1>
@ViewBag.Message
<section class="reg_display">

    <panel class="reg_form  col_rborder">

        @using (Html.BeginForm("Registration", "Guest", FormMethod.Post))
        {
            @Html.AntiForgeryToken()

            @*NOTE:Complete when Database Created*@
            @*@Html.AntiForgeryToken();
                        if (ViewBag.Message != null)
                        {
                            <div>
                            @ViewBag.Message
                            </div>
                        }*@
        <div class="reg_column">

            @Html.ValidationSummary(true, "", new { @class = "text-danger" })
            <div>
                <div class="div_flex">
                    @Html.LabelFor(model => model.Guest.FirstName, new { @class = "label_float" })
                    @Html.ValidationMessageFor(model => model.Guest.FirstName, "", new { @class = "text-danger" })
                </div>
                @Html.EditorFor(model => model.Guest.FirstName, new { htmlAttributes = new { @class = "textbox" } })
            </div>

            <div>
                <div class="div_flex">
                    @Html.LabelFor(model => model.Guest.LastName)
                    @Html.ValidationMessageFor(model => model.Guest.LastName, "", new { @class = "text-danger" })
                </div>
                @Html.EditorFor(model => model.Guest.LastName, new { htmlAttributes = new { @class = "textbox" } })
            </div>

            <div>
                <div class="div_flex">
                    @Html.LabelFor(model => model.Guest.Email)
                    @Html.ValidationMessageFor(model => model.Guest.Email, "", new { @class = "text-danger" })
                </div>
                @Html.EditorFor(model => model.Guest.Email, new { htmlAttributes = new { @class = "textbox" } })
            </div>

            <div>
                <div class="div_flex">
                    @Html.LabelFor(model => model.Guest.Password)
                    @Html.ValidationMessageFor(model => model.Guest.Password, "", new { @class = "text-danger" })
                </div>
                @Html.PasswordFor(model => model.Guest.Password, new { @class = "textbox" })
            </div>

            <div>
                <div class="div_flex">
                    @Html.LabelFor(model => model.Guest.ConfirmPassword)
                    @Html.ValidationMessageFor(model => model.Guest.ConfirmPassword, "", new { @class = "text-danger" })
                </div>
                @Html.PasswordFor(model => model.Guest.ConfirmPassword, new { @class = "textbox" })
            </div>

            <div>
                <div class="div_flex">
                    @Html.LabelFor(model => model.Guest.PhoneNo)
                    @Html.ValidationMessageFor(model => model.Guest.PhoneNo, "", new { @class = "text-danger" })
                </div>
                @Html.EditorFor(model => model.Guest.PhoneNo, new { htmlAttributes = new { @class = "textbox" } })
            </div>

            <div>
                <div>
                    <input type="submit" value="Create Account" class="submit" />
                </div>
            </div>
        </div>
        }
    </panel>

    <panel class="reg_form">

        @using (Html.BeginForm("Login", "Guest", FormMethod.Post))
        {
            @Html.AntiForgeryToken()

        <div class="reg_column">

            @*@Html.ValidationSummary(true, "", new { @class = "text-danger" })*@
            @Html.ValidationSummary(true, "Login failed. Please check your login details.", new { @class = "text-danger" })
            <div>
                <div class="div_flex">
                    @Html.LabelFor(model => model.Login.ValEmail)
                    @Html.ValidationMessageFor(model => model.Login.ValEmail, "", new { @class = "text-danger" })
                </div>
                @Html.EditorFor(model => model.Login.ValEmail, new { htmlAttributes = new { @class = "textbox" } })
            </div>

            <div>
                <div class="div_flex">
                    @Html.LabelFor(model => model.Login.ValPassword)
                    @Html.ValidationMessageFor(model => model.Login.ValPassword, "", new { @class = "text-danger" })
                </div>
                @Html.EditorFor(model => model.Login.ValPassword, new { htmlAttributes = new { @class = "textbox" } })
            </div>

            <div>
                <div>
                    <input type="submit" value="Sign In" class="submit" />
                </div>
            </div>
        </div>
        }
    </panel>

</section>