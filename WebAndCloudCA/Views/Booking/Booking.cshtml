@model WebAndCloudCA.Models.Booking

@{
    ViewBag.Title = "Booking";
}

<h2>Booking A Room</h2>

@using (Html.BeginForm("Booking", "Booking", FormMethod.Post)) 
{
    @Html.AntiForgeryToken()
    
<div class="form-horizontal">
    <nav class="account nav">
        <ul class="container">
            <li>@Html.ActionLink("Book A Room", "Booking", "Booking")</li>
            <li>@Html.ActionLink("Account Details", "AccountDetails", "AccountDetails")</li>
            <li>@Html.ActionLink("Booking History", "BookingDetails", "BookingDetails")</li>
            <li>@Html.ActionLink("Feedback", "Index", "Feedback")</li>
        </ul>
    </nav>
    <hr />
    @Html.ValidationSummary(true, "", new { @class = "text-danger" })
    <div>
        <div class="div_flex">
            @Html.LabelFor(model => model.ArrivalDate)
            @Html.EditorFor(model => model.ArrivalDate, new { htmlAttributes = new { @class = "textbox" } })
        </div>
            @Html.ValidationMessageFor(model => model.ArrivalDate, "", new { @class = "text-danger" })     
    </div>

    <div>
        <div class="div_flex">
            @Html.LabelFor(model => model.DepartureDate)
            @Html.EditorFor(model => model.DepartureDate, new { htmlAttributes = new { @class = "textbox" } })
        </div>
            @Html.ValidationMessageFor(model => model.DepartureDate, "", new { @class = "text-danger" })
    </div>

    <div>
        <div class="div_flex">
            @Html.LabelFor(model => model.NumberOfGuests)
            @Html.EditorFor(model => model.NumberOfGuests, new { htmlAttributes = new { @class = "textbox" } })
            <div />
            @Html.ValidationMessageFor(model => model.NumberOfGuests, "", new { @class = "text-danger" })
        </div>
    </div>


        <div>
            <input type="submit" value="Book Now" class="submit" />
        </div>

    </div>
}

<div>
    @Html.ActionLink("Back to List", "Index")
</div>
